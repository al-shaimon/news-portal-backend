# Production Environment Configuration
# Copy this to .env in your production server

# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database (Update with your production database credentials)
DATABASE_URL="postgresql://news_portal_user:YOUR_PRODUCTION_PASSWORD@localhost:5432/news_portal?schema=public"

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-production-jwt-secret-min-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-production-refresh-secret-min-32-characters-long
JWT_REFRESH_EXPIRE=30d

# Frontend URLs (for CORS) - Add your production frontend domain
FRONTEND_URL=https://thecontemporary.news

# Backend Domain (for Caddy reverse proxy)
BACKEND_DOMAIN=backoffice.thecontemporary.news
CADDY_EMAIL=admin@thecontemporary.news

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Cloudinary (Optional - for cloud storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Super Admin Credentials
SUPER_ADMIN_EMAIL=admin@newsportal.com
SUPER_ADMIN_PASSWORD=ChangeThisToStrongPassword123!
SUPER_ADMIN_NAME=Super Admin
