{
  "info": {
    "name": "News Portal API",
    "description": "Complete API collection for News Portal Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/v1"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@newsportal.com\",\n  \"password\": \"Admin@12345\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123\"\n}"
            },
            "url": "{{base_url}}/auth/register"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        {
          "name": "Get All Articles",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/articles?page=1&limit=10"
          }
        },
        {
          "name": "Get Featured Articles",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/articles/featured/list?limit=5"
          }
        },
        {
          "name": "Create Article",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": {\n    \"en\": \"Breaking News: Technology Advancement\",\n    \"bn\": \"ব্রেকিং নিউজ: প্রযুক্তির অগ্রগতি\"\n  },\n  \"content\": {\n    \"en\": \"Full article content goes here...\",\n    \"bn\": \"সম্পূর্ণ নিবন্ধের বিষয়বস্তু এখানে যায়...\"\n  },\n  \"excerpt\": {\n    \"en\": \"Short summary\",\n    \"bn\": \"সংক্ষিপ্ত সারাংশ\"\n  },\n  \"category\": \"CATEGORY_ID\",\n  \"status\": \"published\",\n  \"isFeatured\": false\n}"
            },
            "url": "{{base_url}}/articles"
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/categories"
          }
        },
        {
          "name": "Get Category Tree",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/categories/tree/all"
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Overview Stats",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/dashboard/overview"
          }
        }
      ]
    }
  ]
}
